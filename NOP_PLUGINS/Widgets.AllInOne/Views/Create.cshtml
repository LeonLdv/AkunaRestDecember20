@model AllInOneModel
@using Nop.Plugin.Widgets.AllInOnePlugin.Models;
@using Nop.Web.Framework.UI;
@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.Title = T("Plugins.Widgets.AllInOne.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("AllInOne");
}

<form asp-controller="WidgetsAllInOne" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Plugins.Widgets.AllInOne.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugins.Widgets.AllInOne.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            @await Html.PartialAsync("~/Plugins/Widgets.AllInOne/Views/_CreateOrUpdate.cshtml", Model)
        </div>
    </div>
</form>


